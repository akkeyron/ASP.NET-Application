@model Category



<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h1 class="text-primary">Edit Category</h1>
			<hr />
		</div>
		<div class="row mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" readonly type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="row mb-3">
			<label asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" type="number" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary center form-control mb-2 col-md-3">Update</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control col-md-3">Go Back</a>
	</div>

</form>


@* client side validation  *@
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}